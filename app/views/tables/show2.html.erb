<p id="notice"><%= notice %></p>
<h1> You are in room <%= @room_name %> on table <%= @table.number %></h1>
<div id="game-display">
  <div id="opponents-row" class="row">
    <div id="first-player" class="opponent col-lg-4">
      <div class="opponents-cards">
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
     </div>
      <div class="opponent-info">
        <p id="opp1-p">Opponent 1 has $1000000.</p>
      </div>
    </div>
    <div id="second-player" class="opponent col-lg-4">
      <div class="opponents-cards">
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
      </div>
      <div class="opponent-info">
        <p id="opp2-p">Opponent 2 has $100000.</p>
      </div>
    </div>
    <div id="third-player" class="opponent col-lg-4">
      <div class="opponents-cards">
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
        <%= image_tag "cards/card_back.png", :class => "card-img" %>
      </div>
      <div class="opponent-info">
        <p id="opp3-p">Opponent 3 has $10000.</p>
      </div>
    </div>
  </div>
  <div id="game-row" class="row">
    <div class="col-lg-2"></div>
    <div id="stream-panel" class="col-lg-6">
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
    </div>
    <div id="pot-status" class="col-lg-2">
      <p id="pot-balance">$1000000</p>
    </div>
  </div>
  <div id="players-row" class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-4" id="my-cards">
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <%= image_tag "cards/card_back.png", :class => "card-img" %>
      <p id="my-p">You have $1000000.</p>
    </div>
    <div id="action-console" class="col-lg-4">
      <div id="bet" class="button">
        <p class="button-text">BET</p>
      </div>
      <div id="fold" class="button">
        <p class="button-text">FOLD</p>
      </div>      
    </div> 
  </div>
</div>
<%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}'; var GAME_ID = '#{@game_id}'" %>
